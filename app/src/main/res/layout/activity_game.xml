<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <com.ywb.tuyue.widget.AppTitle
            style="@style/title_style"
            app:showBack="true"
            app:canFinish="true"
            app:centreText="电玩"
            app:centreTextColor="@color/white" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:background="@color/white"
        android:orientation="vertical">

        <com.youth.banner.Banner
            android:id="@+id/banner_Game"
            android:layout_width="match_parent"
            android:layout_height="200dp">

        </com.youth.banner.Banner>

        <android.support.design.widget.TabLayout
            android:id="@+id/pagerTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="#FFFF2645"
            app:tabIndicatorHeight="@dimen/dp_5"
            app:tabMaxWidth="100dp"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="#FFFF2645"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            app:tabTextColor="@color/my_black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="-2dp"
            android:background="@color/hint_color" />

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/sm_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:overScrollMode="never"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

        <!--<com.ywb.tuyue.widget.CustomViewPager-->
        <!--android:id="@+id/pager"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->
    </LinearLayout>
</RelativeLayout>
