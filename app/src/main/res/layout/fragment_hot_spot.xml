<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hot_spot_rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/hotTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="输入密码进入设置界面进行热点设置" />

    <EditText
        android:id="@+id/setHotPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hotTip"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_black_kuang_bg"
        android:hint="请输入密码"
        android:maxLines="16"
        android:inputType="textPassword"

        android:padding="10dp" />

    <TextView
        android:id="@+id/jumpSetting"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_red"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/setHotPassword"
        android:text="确定"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/white" />

</RelativeLayout>